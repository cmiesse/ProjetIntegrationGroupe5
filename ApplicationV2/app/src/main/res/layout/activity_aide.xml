<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#6370A2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/retour"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="@drawable/fleche"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Aide"
            android:textSize="@android:dimen/app_icon_size" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="510dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp"
                android:text="1)Comment Ajouter une Alarme : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginLeft="10dp"
                android:text="- Pour ajouter une alarme, il faut appuer sur l'icone en forme de cloche. Ensuite appuyer sur l'icone +. Vous pouvez désormais paramétrer votre réveil."
                android:textColor="#F3000000"
                android:layout_marginTop="60dp"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:text="2)Explication des paramètres :"
                android:textColor="#000000"
                android:layout_marginTop="180dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:text="- L'heure de l'alarme : L'heure à laquelle le réveil sonnera.  "
                android:textColor="#FD000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"
                android:text="-L'intensité du volume : La puissance sonore du son."
                android:textColor="#000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="10dp"
                android:text="- L'intensité de la lumière : l'intensité de la lumière qu'émettera le réveil."
                android:textColor="#F8000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="10dp"
                android:text="- La couleur de la lumière : La couleur que la lumière prendra."
                android:textColor="#FA000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="10dp"
                android:text="- Durée de l'alarme : Le temps que durera le réveil."
                android:textColor="#F2000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="10dp"
                android:text="- L'augmentation de la luminosité : L'augmentation de la puissance de la lumière en fonction du temps"
                android:textColor="#FC000000"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="540dp"
                android:layout_marginLeft="10dp"
                android:text="-Le libélle : Le nom qu'aura votre alarme"
                android:textColor="#F0000000"
                android:textSize="21sp" />


        </RelativeLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#6370A2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1000"
            android:background="@drawable/happydawn1"
            />
    </LinearLayout>
</LinearLayout>