<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#6370A2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/retour"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="@drawable/fleche"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Son"
            android:textSize="@android:dimen/app_icon_size" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="410dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="410dp"
            android:orientation="horizontal" >

    <!--        <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                ></ListView> -->

            <TextView
                android:id="@+id/foretMatinale"
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:layout_marginLeft="0dp"
                android:text="Foret matinale"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:id="@+id/playforet"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pauseforet"
                android:layout_marginLeft="242dp"/>
            
            <TextView
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:layout_marginTop="53dp"
                android:text="Oiseaux 1"
                android:textColor="#000000"
                android:textSize="22sp" />
            <Button
                android:id="@+id/playoiseau1"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="53dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pauseoiseaux1"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="242dp"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:layout_marginTop="106dp"
                android:text="Oiseaux 2"
                android:textColor="#000000"
                android:textSize="22sp" />
            <Button
                android:id="@+id/playoiseau2"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="106dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pauseoiseaux2"
                android:layout_marginTop="106dp"
                android:layout_marginLeft="242dp"/>
            <TextView
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:text="Petit Ruisseaux"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginTop="159dp"/>
            <Button
                android:id="@+id/playpetitruisseau"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="159dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pausepetitruisseau"
                android:layout_marginTop="159dp"
                android:layout_marginLeft="242dp"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:text="Vague Ocean"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginTop="212dp"/>
            <Button
                android:id="@+id/playvaguedosocean"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="212dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pausevagueoceandos"
                android:layout_marginTop="212dp"
                android:layout_marginLeft="242dp"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:text="Pluie/Orage"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginTop="265dp"/>
            <Button
                android:id="@+id/playpluiorage"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="265dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pausepluieorage"
                android:layout_marginTop="265dp"
                android:layout_marginLeft="242dp"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:text="Mouettes Mer"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginTop="318dp"/>
            <Button
                android:id="@+id/playmouettemer"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="PLAY"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="318dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Pause"
                android:textColor="#ED000000"
                android:textSize="21sp"
                android:id="@+id/pausemouettemer"
                android:layout_marginTop="318dp"
                android:layout_marginLeft="242dp"/>
            <RadioGroup
                android:layout_width="60dp"
                android:layout_height="371dp"
                android:layout_marginLeft="330dp"
                android:id="@+id/radiogroup">

                <RadioButton
                    android:id="@+id/radio_one"
                    android:layout_width="50dp"
                    android:layout_height="53dp"
                    android:checked="true"
                    android:text="Foret matinale" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Oiseaux 1"
                    android:id="@+id/radio_two"
                    />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Oiseaux 2"
                    android:id="@+id/radio_three"
                    />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Petit Ruisseaux"
                    android:id="@+id/radio_four"
                    />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Vague Ocean"
                    android:id="@+id/radio_five"
                    />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Pluie/Orage"
                    android:id="@+id/radio_six"
                    />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="53dp"
                    android:text="Mouetted Mer"
                    android:id="@+id/radio_seven"
                    />
            </RadioGroup>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/valideSon"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:background="#6370A2"
            android:text="valide"></Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#6370A2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1000"
            android:background="@drawable/happydawn1"
            android:orientation="horizontal" />
    </LinearLayout>


</LinearLayout>